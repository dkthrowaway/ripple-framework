{
  "searchConfig": {
    "index": "a83890f7a31dea14e1ae83c6f0afacca-appsearch-index-default-node"
  },
  "query": [
    {
      "multi_match": {
        "query": "{{query}}",
        "fields": [
          "title^3",
          "field_landing_page_summary^2",
          "body",
          "field_paragraph_body",
          "summary_processed"
        ]
      }
    }
  ],
  "userFilters": [
    {
      "id": "topic",
      "filter": [
        {
          "terms": {
            "field_topic_name.keyword": "{{value}}"
          }
        }
      ],
      "component": "TideSearchFilterDropdown",
      "props": {
        "label": "View those relevant to me",
        "placeholder": "Individuals and organisation types",
        "options": ["Business", "Education"]
      }
    },
    {
      "id": "status",
      "filterFn": ["grantStatus"],
      "component": "TideSearchFilterDropdown",
      "props": {
        "label": "Status",
        "placeholder": "Select grant status",
        "options": ["Open", "Closed", "Ongoing"]
      }
    }
  ],
  "globalFilters": [
    {
      "exists": {
        "field": "nid"
      }
    },
    {
      "term": {
        "field_node_site": "4"
      }
    }
  ]
}
